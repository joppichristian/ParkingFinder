<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:elevation="6dp"
                    android:background="@drawable/searchbar_background"
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutEx">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_menu_black_18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:onClick="optionsMenuButtonClick"/>

        <ImageView
            android:id="@+id/searchLocation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_search_black_18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtSearchLocation"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18dp"
            android:hint="@string/search_loc_hint"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_location"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="setCurrLocationBtnClick"/>

    </RelativeLayout>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="6dp"
        android:visibility="invisible"
        android:id="@+id/progressBar"/>

</RelativeLayout>