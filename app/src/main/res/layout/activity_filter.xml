<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="joppi.pier.parkingfinder.filter">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/timePicker"
                android:layoutMode="opticalBounds"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/timePicker"
                android:layout_alignLeft="@+id/timePicker"
                android:layout_weight="2">

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/toggleButton"
                    android:textOn="CAR"
                    android:textOff="CAR"
                    android:layout_below="@+id/toggleButton2"
                    android:layout_alignLeft="@+id/toggleButton3"
                    android:layout_weight="2"
                    android:checked="true" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/toggleButton2"
                    android:textOn="MOTO"
                    android:textOff="MOTO"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="2"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <ToggleButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/toggleButton3"
                    android:textOn="CARAVAN"
                    android:textOff="CARAVAN"
                    android:layout_alignBottom="@+id/timePicker"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="2" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Quando lasci la sosta?"
                android:id="@+id/setTime"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_marginTop="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="0dp">

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Free parking only?"
                android:id="@+id/switch1"
                android:layout_column="0"
                android:layout_weight="2"
                android:layout_marginTop="50dp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Start"
                android:id="@+id/startApp"
                android:layout_column="0"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
